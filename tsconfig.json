{
  "compilerOptions": {
      "lib": ["es2020"],
      "target": "es2019",
      "module": "commonjs",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "resolveJsonModule": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "esModuleInterop": true,
      "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
}
